rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /affiliates/{affiliateId} {
      allow get: if true;
    }

    match /users/{userId} {
      allow get, create, update: if request.auth.uid == userId;
    }
  }
}